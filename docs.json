{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Pointron",
   "theme": {
    "colors": {
      "primary": "#2563EB",
      "light": "#3B82F6",
      "dark": "#1D4ED8",
      "background": {
        "dark": "#111827",
        "light": "#ffffff"
      },
      "text": {
        "dark": "#ffffff",
        "light": "#111827"
      }
    },
    "typography": {
      "font": "Inter",
      "headings": {
        "font": "Cal Sans"
      }
    },
    "sidebar": {
      "backgroundColor": "#f8fafc",
      "textColor": "#334155"
    },
    "codeBlock": {
      "backgroundColor": "#1e293b",
      "textColor": "#e2e8f0"
    }
  },
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",   
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Product deep dive",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      },
       {
        "tab": "FAQs",
        "groups": [
           {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Discord",
          "href": "https://21n.org",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://blog.21n.org",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact us",
        "href": "mailto:hello@21n.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Go to app",
      "href": "https://web.pointron.app"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/@PointronApp",
      "linkedin": "https://linkedin.com/company/21n"
    }
  }
